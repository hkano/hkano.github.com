{% extends "layout.njk" %}

{% block title %}hkano.com{% endblock %}

{% block content %}
  {% for article in articles %}
    <article class="article-card">
      <h2 class="article-title">
        <a href="{{ article.url }}">{{ article.title }}</a>
      </h2>
      <div class="article-body">
        {{ article.body | safe }}
      </div>
      <div class="article-date">
        Date: {{ article.date }}
      </div>
    </article>
  {% endfor %}
{% endblock %}
